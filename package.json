{
  "name": "eosreports",
  "version": "0.1.0",
  "description":
    "EOS Reports: Data visualizations to help you make sense of the EOS blockchain.",
  "repository": {
    "type": "git",
    "url": "https://github.com/eoscostarica/eosreports.git"
  },
  "author": "EOS Costa Rica",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eoscostarica/eosreports/issues"
  },
  "homepage": "https://github.com/eoscostarica/eosreports",
  "dependencies": {
    "animate.css": "^3.5.2",
    "bootstrap": "^4.0.0",
    "dropzone": "^5.3.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.0.0",
    "jquery-flot": "^0.8.3",
    "jquery-sparkline": "^2.4.0",
    "jquery-touchswipe": "^1.6.18",
    "jquery-validation": "^1.17.0",
    "jquery.browser": "^0.1.0",
    "jquery.flot.tooltip": "^0.9.0",
    "jqvmap": "^1.5.1",
    "metismenu": "^2.7.2",
    "morris.js": "^0.5.0",
    "nprogress": "^0.2.0",
    "popper.js": "^1.12.9",
    "quill": "^1.3.5",
    "raphael": "^2.2.7",
    "responsive-toolkit": "^2.6.3",
    "sortablejs": "^1.7.0",
    "tether": "^1.4.3",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "cross-env": "^5.1.3",
    "dotenv": "^4.0.0",
    "front-matter": "^2.0.5",
    "fs-extra": "^3.0.1",
    "gh-pages-deploy": "0.4.2",
    "glob": "^5.0.14",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-concat": "^2.6.0",
    "gulp-connect": "^5.0.0",
    "gulp-flatten": "^0.3.1",
    "gulp-gh-pages": "^0.5.4",
    "gulp-load-plugins": "^1.5.0",
    "gulp-prettify": "^0.5.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.4",
    "handlebars": "^4.0.5",
    "handlebars-layouts": "^3.1.0",
    "handlebars-registrar": "^1.5.2",
    "main-bower-files": "^2.9.0",
    "through2": "^2.0.0",
    "vinyl": "^2.0.2",
    "eslint": "4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "prettier": "1.12.1",
    "prettier-eslint-cli": "^4.7.1"
  },
  "scripts": {
    "start": "npm run gulp",
    "build": "npm run gulp build",
    "build:prod":
      "rimraf ./dist && cross-env BASE_URL=\"https://eosreports.com/\" npm run build",
    "build:cname": "echo 'eosreports.com' >> ./dist/CNAME",
    "gulp": "gulp --gulpfile build/gulpfile.js",
    "deploy":
      "npm run build:prod && npm run build:cname && npm run gulp deploy",
    "lint": "eslint \"src/**/*.js\" \"config/**/*.js\" \"build/**/*.js\"",
    "format":
      "prettier-eslint --write \"src/**/*.js\" \"config/**/*.js\" \"build/**/*.js\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": ["prettier --write", "eslint --fix", "git add"],
    "config/**/*.js": ["prettier --write", "eslint --fix", "git add"],
    "build/**/*.js": ["prettier --write", "eslint --fix", "git add"]
  },
  "eslintConfig": {
    "globals": {
      "env": true,
      "$": true,
      "NProgress": true,
      "tinycolor": true,
      "config": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": ["plugin:prettier/recommended", "standard"],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
